<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.TrackingActivity">

    <EditText
        android:id="@+id/tracking_input_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/tracking_input_order"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/tracking_btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="startTracking"
        android:text="@string/tracking_btn_start" />

    <Button
        android:id="@+id/tracking_btn_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stopTracking"
        android:text="@string/tracking_btn_end" />
</LinearLayout>